<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcgatletico.chessleaderboardblockchain.SelectionPseudoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitreSelectionPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu dois choisir un {&quot;Arbitre&quot;,&quot;Joueur1&quot;,&quot;Joueur2&quot;}" />

        <EditText
            android:id="@+id/editTextSelectionPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSelectionPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

        <ListView
            android:id="@+id/listViewSelectionPseudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>